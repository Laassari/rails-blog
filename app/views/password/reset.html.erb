<%= form_with(scope: :password, local: true) do |form| %>
<p class="mb-5">
  <%= form.label :password, class: "mb-1 inline-block" %><br>
  <%= form.text_field :password, type: "password", class: "border rounded py-1 px-2" %>
</p>

<p>
  <%= form.submit 'Update password', class: "mb-3 bg-green-400 text-white px-2 py-1 rounded" %>
</p>
<% end %>

<%if flash[:alert]%>
  <span class="bg-red-100 text-red-600 p-3 inline-block  mt-5"><%=  flash[:alert] %></span>
<%end%>