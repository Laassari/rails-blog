<div class="p-5 mx-auto max-w-2xl bg-opacity-50 bg-gray-100 mt-5">
  <div class=" rounded inline-block mb-5">
    <p>username: <%= @user.username %></p>
    <p>password: <%= @user.email %></p>
  </div>

  <%= form_with(model: @user, local: true, method: "put", url: "/signup") do |form| %>
  <p class="mb-5">
    <%= form.label :username, class: "mb-1 inline-block" %><br>
    <%= form.text_field :username, autocomplete:"off", class: "border rounded py-1 px-2" %>
  </p>


  <p class="mb-5">
    <%= form.label :email, class: "mb-1 inline-block" %><br>
    <%= form.text_field :email, type: "email", class: "border rounded py-1 px-2" %>
  </p>

  </p>

  <p>
    <%= form.submit 'Update', class: "mb-3 bg-green-400 text-white px-2 py-1 rounded" %>
  </p>

  <span class="whitespace-pre-line"><%= @user.errors.full_messages.join("\n")%></span>
  <% end %>

  <%= form_with(model: @user, local: true, method: "delete", url: "/login") do |form| %>
  <p>
    <%= form.submit 'Log out', class: "mb-3 bg-red-400 text-white px-2 py-1 rounded cursor-pointer" %>
  </p>
  <% end %>

</div>