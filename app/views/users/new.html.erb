<%= form_with scope: :user, local: true do |form| %>
<p class="mb-5">
  <%= form.label :username, class: "mb-1 inline-block" %><br>
  <%= form.text_field :username, autocomplete:"off", class: "border rounded py-1 px-2" %>
  <% if @user.errors[:username][0] %>
  <span class="text-red-500 text-xs"><%= @user.errors[:username][0]%></span>
  <%end%>
</p>


<p class="mb-5">
  <%= form.label :email, class: "mb-1 inline-block" %><br>
  <%= form.text_field :email, type: "email", class: "border rounded py-1 px-2" %>
  <% if @user.errors[:email][0] %>
  <span class="text-red-500 text-xs"><%= @user.errors[:email][0]%></span>
  <%end%>
</p>

<p class="mb-5">
  <%= form.label :password, class: "mb-1 inline-block" %><br>
  <%= form.text_field :password, type: "password", class: "border rounded py-1 px-2" %>
  <% if @user.errors[:password][0] %>
  <span class="text-red-500 text-xs"><%= @user.errors[:password][0]%></span>
  <%end%>

</p>



<p>
  <%= form.submit 'Sign Up', class: "mb-3 bg-green-400 text-white px-2 py-1 rounded" %>
</p>
<% end %>