<div class="border p-3 rounded shadow h-full flex flex-col">
  <a class="capitalize text-xl" href=<%= article_path(article) %>><%= article.title %></a>
  <p class="flex-grow mt-2"><%= article.text[0..90] %></p>
  <div class="mt-2">
    <%= link_to 'Edit', edit_article_path(article), class: "text-green-600 mr-1 hover:underline" %>
    <%= link_to 'Destroy', article_path(article), method: :delete, class: "text-red-600 hover:underline" %>
  </div>
</div>